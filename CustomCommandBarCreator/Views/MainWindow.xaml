<Window x:Class="CustomCommandBarCreator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomCommandBarCreator.Views"
        mc:Ignorable="d"
        Title="CommandBar Creator for VBA Macros" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="CommandBar Name" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="6" Text="{Binding Name}" VerticalContentAlignment="Center"/>


        <!--Files-->
        <Button Grid.Row="1" Grid.Column="0" Content="Add GMS Files" Margin="6" VerticalAlignment="Top"
                Command="{Binding AddFileCommand}"/>
        <ListView Grid.Row="1" Grid.Column="1" Margin="6" ItemsSource="{Binding GmsPaths}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Files" DisplayMemberBinding="{Binding}"/>

                    <GridViewColumn   Width="46" Header="Remove">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Background="{x:Null}" BorderBrush="{x:Null}" Width="28" Height="28"
                                     CommandParameter="{Binding}" Command="{Binding DataContext.RemoveFileCommand,RelativeSource={RelativeSource AncestorType=Window,Mode=FindAncestor}}"   >
                                    <Image Source="/Images/trash.png" />
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>

        </ListView>
        <!--Items-->
        <Button Grid.Row="2" Grid.Column="0" Content="Add Command" Margin="6" VerticalAlignment="Top"
                Command="{Binding AddCommandItemCommand}"/>
        <ListView Grid.Row="2" Grid.Column="1" Margin="6" ItemsSource="{Binding CommandItems}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Caption" Width="140" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Caption}" Width="120" Margin="2"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Command" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Command}" Width="120"  Margin="2"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Enable" Width="140"  >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding EnableCondition}" Width="120" Margin="2"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Shortcut" Width="Auto"  >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Ctrl" IsChecked="{Binding Shortcut.Control}" HorizontalAlignment="Center" Margin="2"/>
                                    <CheckBox Content="Shift"  IsChecked="{Binding Shortcut.Shift}" HorizontalAlignment="Center" Margin="2"/>
                                    <CheckBox Content="Alt"  IsChecked="{Binding Shortcut.Alt}" HorizontalAlignment="Center" Margin="2"/>
                                    <TextBox Text="{Binding Shortcut.Key}"  Width="60" Margin="2" PreviewKeyUp="txt_PreviewKeyUP"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn   Width="46" Header="Icon">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Background="{x:Null}" BorderBrush="{x:Null}" Width="28" Height="28"
                                    CommandParameter="{Binding}" Command="{Binding DataContext.AddIconCommand,RelativeSource={RelativeSource AncestorType=Window,Mode=FindAncestor}}"   
                                    >
                                    <Image Source="{Binding Icon}" />
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn   Width="46" Header="Remove">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Background="{x:Null}" BorderBrush="{x:Null}" Width="28" Height="28"
                                    CommandParameter="{Binding}" Command="{Binding DataContext.RemoveCommandItemCommand,RelativeSource={RelativeSource AncestorType=Window,Mode=FindAncestor}}"   >

                                    <Image Source="/Images/trash.png" />
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>

        </ListView>
        <Button CommandParameter="{Binding}" Command="{Binding GenerateCommand}" Grid.Column="0" Grid.Row="3" Content="Generate" Width="80" Margin="6"/>
    </Grid>
</Window>
